{
  "ignorePatterns": ["node_modules/", "android/", "ios/"],
  "rules": {
    "quotes": [1, "double"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [0],
    "comma-dangle": [
      1,
      "always-multiline",
      { "functions": "never" }
    ],
    "semi": [1, "never"],
    "object-curly-spacing": [1, "always"],
    "react-native/no-inline-styles": [0],
    "prettier/prettier": [
      1,
      {
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "singleQuote": false,
        "trailingComma": "all",
        "semi": false
      }
    ]
  }
}