{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [ "es6", "es2015", "dom" ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": [ "node" ],
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "experimentalDecorators": true
  },
  "include": [ "./src/**/*" ]
}
