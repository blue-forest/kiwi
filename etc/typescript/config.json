{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [ "dom", "es5", "es6" ],
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"]
  }, 
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  },
  "include": [ "./src/**/*" ],
  "exclude": [ "node_modules" ]
}
