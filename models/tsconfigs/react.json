{
  "compilerOptions": {
    "baseUrl": "../..",
    "rootDir": "../../src",
    "outDir": "../../lib",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [ "es6", "dom" ],
    "paths": { "*": [ "./typings/*" ] },
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "sourceMap": false
  },
  "include": [ "../../src/**/*" ],
  "exclude": [ "node_modules" ]
}
